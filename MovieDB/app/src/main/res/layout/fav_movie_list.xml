<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/favListMovieIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/favListMovieTitle"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/favListMovieIcon"
        android:layout_toEndOf="@id/favListMovieIcon"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/favListFavBtn"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@android:color/background_light"
        android:src="@android:drawable/btn_star_big_off" />

    <TextView
        android:id="@+id/favListMovieRelease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/favListMovieIcon"
        android:layout_toEndOf="@id/favListMovieIcon"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

</RelativeLayout>